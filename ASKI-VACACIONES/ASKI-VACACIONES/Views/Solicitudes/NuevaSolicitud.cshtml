@model ASKI_VACACIONES.Models.SolicitudesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Nueva solicitud

    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Calendario"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Nueva solicitud</li>
    </ol>
</section>
<!-- Content Wrapper. Contains page content -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
              @using (Html.BeginForm()) {

                   <div class="panel-body">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title"></h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->
                            <form class="form-horizontal" id="formulario">
                                  
                                <div class="form-group">
                                    <label for="inputjefe" class="col-sm-2 control-label">Jefe inmediato</label>
                                    <div class="col-sm-10">
                                        <div class="ui-widget">
                                            <p>
                                                <select id="combobox" class="form-control">
                                                    <option value=""></option>
                                                    @foreach (var item in @ViewBag.jefe)
                                                    {
                                                        <option value="@item">@item</option>
                                                    }

                                                </select>
                                            </p>
                                        </div>


                                    </div>
                                </div>


                                        <div class="form-group">
                                            <label for="inputfecha" class="col-sm-2 control-label">Inicio de vacaciones</label>
                                            <div class="col-sm-10">
                                                <p>@Html.TextBoxFor(x => x.Fechainicio, new { @class = "form-control", type = "date" })</p>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputfecha" class="col-sm-2 control-label">Fin de vacaciones</label>
                                            <div class="col-sm-10">
                                                <p>@Html.TextBoxFor(x => x.Fechafin, new { @class = "form-control", type = "date" })</p>
                                            </div>
                                        </div>
                                         
                                        <div class="box-footer">
                                            <button type="submit" class="btn btn-info pull-right">Solicitar</button>
                                         </div><!-- /.box-footer -->
                            </form>
                        </div><!-- /.box -->
                    </div>

                
}

            </div>

        </div>
    </div>

    <!-- Left col -->
    <section class="col-lg-7 connectedSortable"></section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-5 connectedSortable"></section><!-- right col -->


</section><!-- /.content -->

