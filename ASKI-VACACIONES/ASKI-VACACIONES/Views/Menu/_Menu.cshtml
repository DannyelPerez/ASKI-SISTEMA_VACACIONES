@model ASKI_VACACIONES.Models.MenuModel
@{


}

<section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
        <div class="pull-left image">
            <img src="~/Template/dist/img/avatar5.png" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
            <p>Usuario</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
    </div>

    <br />
    <ul class="sidebar-menu">
        <li class="header">Menu</li>
        <li>




            @if (@ViewBag.Calendario)
            {
                <a href="~/Home/Calendario">
                    <i class="fa fa-calendar"></i> <span>Calendario</span>
                </a>
            }


        </li>

        @if (@ViewBag.Solicitud)
        {
            <li class="treeview">

                <a href="#">
                    <i class="fa fa-list-alt"></i> <span>Solicitudes</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>

                <ul class="treeview-menu">
                    <li><a href="~/Solicitudes/NuevaSolicitud"><i class="fa fa-circle-o"></i> Nueva Solicitud</a></li>
                    <li><a href="~/Solicitudes/MisSolicitudes"><i class="fa fa-circle-o"></i> Mis Solicitudes</a></li>
                </ul>
            </li>
        }

        @if (@ViewBag.Reporte)
        {
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-file-text-o"></i> <span>Reportes</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="~/Reportes/Usuarios"><i class="fa fa-circle-o"></i> Usuarios</a></li>
                    <li><a href=""><i class="fa fa-circle-o"></i> </a></li>
                </ul>
            </li>
        }

        @if (@ViewBag.Administracion)
        {
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-edit"></i> <span>Administracion</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    @if (@ViewBag.Usuarios)
                    {
                        <li><a href="~/Usuarios/Index"><i class="fa fa-circle-o"></i> Usuario</a></li>
                    }
                    @if (@ViewBag.Roles)
                    {
                        <li><a href="~/Roles/Index"><i class="fa fa-circle-o"></i> Roles</a></li>
                    }
                    @if (@ViewBag.Permisos)
                    {
                        <li><a href="~/Permisos/Index"><i class="fa fa-circle-o"></i> Permisos</a></li>
                    }
                    @if (@ViewBag.Departamentos)
                    {
                        <li><a href="~/Departamentos/Index"><i class="fa fa-circle-o"></i> Departamentos</a></li>
                    }
                    @if (@ViewBag.Jerarquia)
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-edit"></i> <span>Jerarquía</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="~/Jerarquia/AddJefe"><i class="fa fa-circle-o"></i> Agregar Jefe de Departamento</a></li>
                                <li><a href="~/Jerarquia/AddJefe"><i class="fa fa-circle-o"></i> Editar Jefe de Empleado</a></li> 
                            </ul>
                        </li>
                    }

                </ul>

            </li>
        }
        <li>
            <a href="~/Home/Ayuda">
                <i class="fa fa-circle-o text-red"></i> <span>Ayuda</span>
            </a>
        </li>
    </ul>

</section>
