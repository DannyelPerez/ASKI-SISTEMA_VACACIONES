@model ASKI_VACACIONES.Models.DepartamentoModel

<link href="~/Template/Validacion/prueba/styles.css" rel="stylesheet" />
<section class="content-header">
    <h1>
        Departamentos

    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Calendario"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Departamentos</li>
    </ol>
</section>

<!-- Content Wrapper. Contains page content -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                @using (Html.BeginForm())
                {

                    <div class="panel-body">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title"></h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->
                            @Html.ValidationSummary()
                            <form class="form-horizontal ">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#0">Agregar</a></li>
                                    <li><a href="~/Usuarios/Edit">Modificar</a></li>
                                    <li><a data-toggle="tab" href="~/Usuarios/Delete">Eliminar</a></li>
                                </ul> <!-- cd-tabs-navigation -->
                                <div class="tab-content">
                                    <div class="tab-pane fade in active">
                                        <div class="box-body">

                                            <div class="form-group">
                                                <label for="inputdescripcion" class="col-sm-2 control-label">Descripcion</label>
                                                <div class="col-sm-10">

                                                    <p>@Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", type = "text" })</p>
                                                    @*@Html.ValidationMessageFor(Model => Model.descripcion)*@
                                                    @*<input type="text" class="form-control" id="inputdescripcion" size="20">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputestado" class="col-sm-2 control-label">Estado</label>
                                                <div class="col-sm-10">
                                                    <p>
                                                        <select class="form-control" disabled>
                                                            <option>Activo</option>
                                                            <option>No Activo</option>
                                                        </select>
                                                    </p>
                                                </div>
                                            </div><!-- /.box-body -->
                                            <div class="box-footer">
                                                <button type="submit" class="btn btn-info pull-right">Agregar</button>
                                            </div><!-- /.box-footer -->
                                        </div>
                                    </div>

                                </div> <!-- cd-tabs-content -->

                            </form>
                        </div><!-- /.box -->
                    </div>

                }
            </div>

        </div>
    </div>

    <!-- Left col -->
    <section class="col-lg-7 connectedSortable"></section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-5 connectedSortable"></section><!-- right col -->


</section><!-- /.content -->