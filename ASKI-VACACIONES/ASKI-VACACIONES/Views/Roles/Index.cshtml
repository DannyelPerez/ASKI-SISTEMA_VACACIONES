@model ASKI_VACACIONES.Models.RolesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Check-->
<script type="text/javascript">
    function showContent() {
        element = document.getElementById("content");
        check = document.getElementById("check");
        if (check.checked) {
            element.style.display = 'block';
        }
        else {
            element.style.display = 'none';
        }
    }
</script>

<section class="content-header">
    <h1>
        Roles

    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Calendario"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Roles</li>
    </ol>
</section>

<!-- Content Wrapper. Contains page content -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                @using (Html.BeginForm())
                {

                    <div class="panel-body">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title"></h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->
                            @Html.ValidationSummary(true)
                            <form class="form-horizontal">

                                        <ul class="nav nav-tabs">
                                            <li class="active"><a data-toggle="tab" href="#0">Agregar</a></li>
                                            <li><a href="~/Usuarios/Edit">Modificar</a></li>
                                            <li><a data-toggle="tab" href="~/Usuarios/Delete">Eliminar</a></li>
                                        </ul> <!-- cd-tabs-navigation -->
                                   <div class="tab-content">
                                          <div class="tab-pane fade in active">
                                            <div class="box-body">

                                                <div class="form-group">
                                                    <label for="inputdescripcion" class="col-sm-2 control-label">Descripcion</label>
                                                    <div class="col-sm-10">
                                                        <p>@Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", type = "text" })</p>
                                                        @Html.ValidationMessageFor(Model => Model.descripcion)
                                                        @*<input type="text" class="form-control" id="inputdescripcion" size="20">*@
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputdepto" class="col-sm-2 control-label">Permisos</label>
                                                    <input type="checkbox" name="check" id="check" value="1" onchange="javascript:showContent()" />
                                                    <div id="content" style="display: none;">

                                                        <div class="box">
                                                            <div class="box-header">
                                                                <h3 class="box-title"></h3>
                                                            </div><!-- /.box-header -->
                                                            <div class="box-body">
                                                                <table id="example" class="display responsive nowrap  table-bordered table-striped table-hover" cellspacing="0" width="100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Id</th>
                                                                            <th>Descripcion</th>
                                                                            

                                                                        </tr>
                                                                    </thead>

                                                                    <tfoot>
                                                                        <tr>
                                                                            <th>Id</th>
                                                                            <th>Descripcion</th>
                                                                        </tr>
                                                                    </tfoot>
                                                                </table>
                                                            </div><!-- /.box-body -->
                                                        </div><!-- /.box -->

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputestado" class="col-sm-2 control-label">Estado</label>
                                                    <div class="col-sm-10">
                                                        <p>
                                                            <select class="form-control" disabled>
                                                                <option>Activo</option>
                                                                <option>No Activo</option>
                                                            </select>
                                                        </p>
                                                    </div>
                                                </div><!-- /.box-body -->
                                                <div class="box-footer">
                                                    <button type="submit" class="btn btn-info pull-right">Agregar</button>
                                                </div><!-- /.box-footer -->
                                            </div>
                                       
                                         </div>

                                    </div> <!-- cd-tabs-content -->
                               
                            </form>
                        </div><!-- /.box -->
                    </div>

                }
            </div>

        </div>
    </div>

    <!-- Left col -->
    <section class="col-lg-7 connectedSortable"></section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-5 connectedSortable"></section><!-- right col -->


</section><!-- /.content -->

<script type="text/javascript">
    var datatable;
    $(document).ready(function () {
        datatable = $('#example').DataTable({
            responsive: true,
            "ajax": {
                "url": "@Url.Action("JSonRoles", "Roles")",
                "type": "POST"
            },
            "columns": [
                    { "data": "id" },
                    { "data": "descripcion" }

            ]
        });

    });
</script>


